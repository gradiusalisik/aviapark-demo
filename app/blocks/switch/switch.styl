.switch
	display flex
	align-items center

	&__link
		display flex
		justify-content center
		align-items center
		size 36px
		font-family $novago
		font-size 11px
		font-weight 700
		text-decoration none
		letter-spacing .5px
		text-transform uppercase

		color $c-dark
		background-color transparent
		border-radius 50%
		transition background-color .3s, color .3s

		&:hover
			color $c-white
			background-color $c-dark

		&_active
			color $c-white
			background-color $c-dark
