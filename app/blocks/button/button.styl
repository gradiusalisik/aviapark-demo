.button
	padding-x 18px
	padding-y 6px
	display flex
	justify-content center
	align-items center
	font-family $navigo
	font-size 13px
	font-weight 700
	text-transform uppercase
	color $c-white
	background-color transparent

	border 1px solid $c-dark-light
	border-radius 17px
	transition border .3s

	&:hover
		border 1px solid $c-white

	&__group
		display flex
		align-items center

	&__quantity
		margin-left 8px
		display flex
		justify-content center
		align-items center
		size 22px
		font-family $navigo
		font-size 11px
		color $c-white
		background-color $c-blue
		border-radius 50%

	&__text
		position relative
		top 0
		left 0

