.header
	position relative
	padding-x 15px
	display flex
	align-items center
	height 62px
	background-color $c-white

	&__content
		position relative
		display flex
		justify-content space-between
		align-items center

	&__switch
		margin-right 48px

	&__logo
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)

	&__info
		display flex
		align-items center

	&__icon-triangle
		position absolute
		left 50%
		bottom -6px
		display block
		width 40px
		height 7px
		transform translateX(-50%)
